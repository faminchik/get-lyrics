{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react",
        // "declaration": true,
        "outDir": "dist/.tmp",
        "strict": true,
        "baseUrl": "./src/",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": ["./@types", "./node_modules/@types"],
        "plugins": [{ "transform": "ts-optchain/transform" }]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
